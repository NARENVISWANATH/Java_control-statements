package javaapplication6;

/**
 *
 * @author NAREN
 */
public class Controlstatements4 {
    public static void main(String args[])
    {
        int num1 = -150;
        if(num1>0)//condition
        {
            System.out.println("Number1 is Positive");
        }
        else
        {
            System.out.println("Number1 is Negative");
        }
    }
    
}
    

