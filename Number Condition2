package javaapplication6;

/**
 *
 * @author NAREN
 */
public class Controlstatements5 {
    public static void main(String args[])
    {
        int num = -150;
        if(num>0)//condition
        {
            System.out.println("Number1 is Positive");
        }
        else if(num<0)
        {
            System.out.println("Number1 is Negative");
        }
        else
        {
            System.out.println("Number is Zero");
    }
    
}
    
    
}
